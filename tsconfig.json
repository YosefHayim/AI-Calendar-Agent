{
	"compilerOptions": {
		"target": "es2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"baseUrl": ".", // Project root
		"paths": {
			"@/*": ["*"] // '@' maps to everything from root
		}
	}
}
